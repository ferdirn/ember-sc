 <div class="container-fluid content-page">
 	<div class="message-inbox">
 		<div class="row">

 			
 				<div class="col-lg-4 mbtm30">
 					<h4 class="title dash-bar nomargin">message</h4>
 					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 container-message">
						<div class="col-xs-12 scrollable-list">
 						<ul>
                            {{# each model as |message| }}
 							<li {{action "displayMessage" message on="mouseUp" }} class="message-li">
 								<div class="head-top">
 									<div class="form-group pull-left">
 										<input type="checkbox">
 										<label>{{message.subject}} &lt;{{message.sender}}&gt; </label>
 									</div>
									
 									<div class="form-group pull-right">
 										<button class="btn btn-primary btn-size-small btn-sell">Reply</button>
 									</div>
 								</div>	
								<div class="message-container" style="max-width: 65%;
    display: inline-block;">
										{{message.body}}
									</div>	
								{{#if message.read_at}}
 								<span class="badge badge-read pull-right">read</span>
 								<!-- change class to badge-unread if its unread -->
								{{/if}}
 							</li>
 							{{/each}}
 						</ul>
 					</div>
 						<div class="form-group text-center col-lg-12 col-md-12 col-sm-12 col-xs-12">
 							<button class="btn btn-primary btn-size-small btn-primary">Mark as Solved</button>
 						</div>
