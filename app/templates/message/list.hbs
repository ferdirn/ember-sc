 						</nav>
                        -->
 					</div>
 				</div>
                {{#if currentMessage }}
 				<div class="col-lg-8 col-xs-12 col-md-12 col-sm-12 mbtm30 in-block" >
 					<h4 class="title dash-bar nomargin">Reply messages</h4>
 					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 15px;border: 1px solid #ccc;">

 						<form  {{action "sendMessage" currentMessage on="submit" }}>
 							<ul class="message-action">
 								<li class="people">
								<div class="name">{{currentMessage.sender}}</div>
								{{currentMessage.body}}
							</li>
							{{# each currentMessage.replies as |reply| }}
							{{# if (eq currentMessage.sender reply.sender) }}
								<li class="people">
									<div class="name">{{reply.sender}}</div>
									{{reply.body}}
								</li>
							{{/if}}
							{{# if (not-eq currentMessage.sender reply.sender) }}
								<li class="self">
									<div class="name">{{reply.sender}}</div>
									{{reply.body}}
								</li>
							{{/if}}
							{{/each}}
 							</ul>	
 							<div class="form-group">
 								{{  textarea value=body class="form-control" rows="3" placeholder="your message here..."}}
 							</div>
 							<div class="form-group pull-right">
 								<!-- <button class="btn btn-primary btn-size-small btn-hollow">attached image</button> -->
 								<button type="submit" class="btn btn-primary btn-size-small btn-hollow">send </button>
 							</div>								
 						</form>
 					</div>
                    
 				</div>
                {{else}}
 				<!-- empty message condition -->
 				<div class="col-lg-8 col-xs-12 col-md-12 col-sm-12 mbtm30 in-block" style="">
 					<h4 class="title dash-bar nomargin">Reply messages</h4>
 					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 empty-container" style="">
 						<div class="col-xs-12 empty-content text-center">
 							your message is empty
 						</div>
 					</div>
 				</div>
 				<!-- empty message condition-->
 			    {{/if}}

 		</div>
 	</div>		
 </div>
