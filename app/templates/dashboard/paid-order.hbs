<div class="col-lg-6 col-sm-12 col-md-12 nopaddingleft wrapper-outer">
  <div class="col-lg-12 col-md-12 col-sm-12 spacer20 dash-bar">
    <label for="exampleInputEmail1" class="in-block">Paid Order</label><span class="badge dash">5</span>
    <div class="col-lg-6 col-xs-2 col-md-6 col-sm-4 nopadding pull-right">
      {{#link-to 'sales'}}
      <div class="btn btn-dash btn-size-small pull-right nomargin">Details</div>
      {{/link-to}}
    </div>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 bordering spacer20 bottom-spacer-container in-block full-width">
    <div class="col-lg-12 col-xs-12 col-sm-12 nopadding in-block full-width">
      <div class="table-responsive bottom-spacer" style="min-height: 223px; max-height:223px;">
        {{#if isPending}}
        <div style="text-align: center;">
          <img src="assets/img/loading.gif" width="200px">
        </div>
        {{else}}
        <table class="table table-striped table-responsive nomargin noverflow">
          <thead>
            <tr>
              <th>Date</th>
              <th>Order Number</th>
              <th>Customer</th>
            </tr>
          </thead>
          <tbody>
            {{#each orders as |order|}}
            <tr>
              <td>{{ order.created_at }}</td>
              <td>
                {{#link-to 'sales.detail' order.order_number}}
                {{ order.order_number }}
                {{/link-to}}
              </td>
              <td>{{ order.customer_name }}</td>
            </tr>
            {{else}}
            <tr style="background-color:#fff; border:1px solid #fff;">
              <td colspan="3">
                <div class="fonter" style="">
                  <i class="fa fa-file fonter-file" style=""></i>
                  <span class="fonter-cross" style="">x</span>
                </div>
                <span class="fonter-bot" style="">
                  No data yet
                  <br>
                  Start selling on MOXY
                </span>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        {{/if}}
      </div>
    </div>
  </div>
</div>
