<div class="container-fluid">
  <div class="row login">
    <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
      <form class="login" {{action 'save' on='submit'}}>
        <img src="/assets/img/bilna-orami.png" class="spacer text-center col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4">
        <div class="clearfix"></div>
        <div class="text-center"><strong>{{{ message }}}</strong></div>
        <div class="form-group">
          <label for="InputUsername">Email Address</label>
          {{input type="email" value=fname class="form-control" id="fname" focus-in='clearMessage'}}

          {{#if displayMessage}}
          <blockquote class="exp">
            <footer>
              {{# if isUsernameNotFound}}
              <cite title="Source Title">
                Verification email will be sent to related email address account.
              </cite>
              {{else}}
              <cite title="Source Title">
                User not found.
              </cite>
              {{/if}}
            </footer>
          </blockquote>
          {{/if}}
        </div>
        <!-- <div class="checkbox"> -->
        <!--   <label> -->
        <!--     <input type="checkbox"> Remember Me -->
        <!--   </label> -->
        <!-- </div> -->
        <button class="btn btn-default btn-block btn-size-regular main-background text-white noborder">Submit</button>
        {{#link-to 'auth.login'}}
          <div class="text-right">Cancel</div>
        {{/link-to}}
      </form>
    </div>
  </div><!-- /.container -->

</div>
