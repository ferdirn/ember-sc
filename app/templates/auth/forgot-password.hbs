<div class="container-fluid">
  <div class="row login">
    <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
      <form class="login" {{action 'authenticate' on='submit'}}>
        <img src="/assets/img/logo.png" class="spacer text-center col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4">
        <div class="clearfix"></div>
        <div class="text-center"><strong>{{{ message }}}</strong></div>
        <div class="form-group">
          <label for="InputUsername">Username</label>
          {{input type="text" class="form-control" id="InputUsername" placeholder="Enter username/email adress" value=username required="required"}}
          <blockquote class="exp">
            <footer>
              <cite title="Source Title">
                Verification email will be sent to related email address account.
              </cite>
            </footer>
          </blockquote>
        </div>
        <!-- <div class="checkbox"> -->
        <!--   <label> -->
        <!--     <input type="checkbox"> Remember Me -->
        <!--   </label> -->
        <!-- </div> -->
        {{#link-to 'auth.new-password'}}
        <div class="btn btn-default btn-block btn-size-regular main-background text-white noborder">Submit</div>
        {{/link-to}}
        {{#link-to 'auth.login'}}
          <div class="text-right">Cancel</div>
        {{/link-to}}
      </form>
    </div>
  </div><!-- /.container -->

</div>
