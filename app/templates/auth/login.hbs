<div class="container-fluid">
  <div class="row login">
    <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
      <form class="login" {{action 'authenticate' on='submit'}}>
        <img src="/assets/img/logo.png" class="spacer text-center col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4">
        <div class="clearfix"></div>
        <div class="text-center"><strong>{{{ message }}}</strong></div>
        <div {{ bind-attr class=":form-group isUsernameError:has-error" }}>
          <label for="username">Email address</label>
          {{input id='identification' class="form-control" placeholder='Enter username/email address' value=identification required=true}}
          {{#if isUsernameError}}
          <label class="input-error" role="alert" for="password"><i class="fa fa-exclamation-triangle"></i>{{usernameErrorMessage}}</label>
          {{/if}}
        </div>
        <div {{ bind-attr class=":form-group isPasswordError:has-error" }}>
          <label for="password">Password</label>
          {{input id='password' class="form-control" placeholder='Enter Password' type='password' value=password required=true}}
          {{#if isPasswordError}}
          <label class="input-error" role="alert" for="password"><i class="fa fa-exclamation-triangle"></i>{{passwordErrorMessage}}</label>
          {{/if}}

        </div>
        <!-- <div class="checkbox"> -->
        <!--   <label> -->
        <!--     <input type="checkbox"> Remember Me -->
        <!--   </label> -->
        <!-- </div> -->
        <button type="submit" class="btn btn-default btn-block btn-size-regular main-background text-white noborder">Submit</button>
        {{#link-to 'auth.register'}}
          <div class="text-right">Register</div>
        {{/link-to}}
      </form>
    </div>
  </div><!-- /.container -->

</div>
