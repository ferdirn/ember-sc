<div class="row login side-padder">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="col-lg-12 col-md-12 col-sm-12 spacer20 dash-bar">
      <label for="" class="in-block nomargin">Vendor Registration</label>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 bordering spacer20" style="background:#fff;">
      <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 text-center">
        <img src="/img/logo.png" width="200px" class="spacer text-center">
      </div>
      <form {{ action 'submit' on="submit" }}>
        <fieldset class="bottom-spacer-container register-field">
          <legend class="register-legend">Credetial Informations</legend>
          <div class="form-group">
            <label for="InputUsername">Username</label>
            {{input type="text" class="form-control" id="InputUsername" placeholder="Username" value=username required="required"}}
          </div>
          <div class="form-group">
            <label for="InputEmail">Email address</label>
            {{input type="email" class="form-control" id="InputEmail" placeholder="Email" value=email required="required"}}
          </div>
          <div {{ bind-attr class=":form-group isPasswordNotMatch:has-error" }}>
            <label for="InputPassword">Password (pattern: minimum 6 chars)</label>
            {{input type="password" pattern=".{6,}" class="form-control" id="InputPassword" placeholder="Password" value=password required="required"}}
          </div>
          <div {{ bind-attr class=":form-group isPasswordNotMatch:has-error" }}>
            <label for="InputRePassword">Re-type Password</label>
            {{input type="password" class="form-control" id="InputRePassword" placeholder="Re-type Password" value=repassword focus-out="matchPassword"}}
            {{#if isPasswordNotMatch}}
            <p class="error" style="color: red;">Password did not match</p>
            {{/if}}
          </div>
        </fieldset>
        <fieldset class="bottom-spacer-container register-field">
          <legend class="register-legend">Personal Information</legend>
          <div class="row">
            <div class="form-group col-lg-6">
              <label for="InputFirstName">First Name</label>
              {{input type="text" class="form-control firstname" id="InputFirstName" placeholder="First Name" value=first_name required="required"}}
            </div>
            <div class="form-group col-lg-6">
              <label for="InputLastName">Last Name</label>
              {{input type="text" class="form-control" id="InputLastName" placeholder="Last Name" value=last_name required="required"}}
            </div>
          </div>
          <div class="form-inline">
            <div class="form-group col-lg-6 nopadding">
              <label for="InputPhone" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding">Phone</label>
              <div class="input-group firstname" style="max-height:34px;">
                <div class="input-group-addon" style="max-height:34px;">+62</div>
                {{input type="text" class="form-control" id="InputPhone" placeholder="Phone" value=phone_number required="required"}}
              </div>
            </div>
            <div class="checkbox col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding">
              <label class="terms-register">
                <input type="checkbox"> I agreed with the terms & conditions
              </label>
            </div>
          </div>
        </fieldset>
        <button type="submit" class="btn btn-primary btn-size-small">Register</button>
        {{#link-to 'auth.login'}}
        <div class="btn btn-link btn-size-small">cancel</div>
        {{/link-to}}
      </form>
    </div>
  </div>
</div>