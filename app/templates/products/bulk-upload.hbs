{{#if isEmptyShopName}}
<div class="alert alert-danger shop-name-error" role="alert">
  Please fill the <b>Shop Name</b> first before uploading your product. Please visit this link <a href="/profile" class="alert-link">Profile</a> to fill your shop name
</div>
{{/if}}

 <div class="container-fluid">
  <div class="row">

    <div class="col-xs-12 col-sm-12 col-lg-4 col-md-4 in-block nopadding">
      <div class="col-xs-12 nopadding bottom-spacer-container">
        <div class="form-group">
          <label for="InputEmail" class="upload-label full-width">Get to know how to upload</label>
          <div class="col-xs-12 col-lg-6 col-md-6 col-sm-6 nopaddingleft">
           <a href="http://static.moxy.co.id/sellercenter/Marketplace_category_ids.pdf" download="category id" target="_blank">
            <span class="btn btn-size-small btn-csv" style="">
              <i class="fa fa-file-excel-o"></i>download guide</span>
            </a>
            </div>
            <div class="col-xs-12 col-lg-6 col-md-6 col-sm-6 nopaddingleft">
              <a href="http://static.moxy.co.id/sellercenter/Marketplace_Bulk_Upload_Example.xls" download="category id" target="_blank">
                <span class="btn btn-size-small btn-csv">
                  <i class="fa fa-file-pdf-o"></i>download xls</span>
              </a>
            </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-12 col-lg-12 in-block nopadding">
        <div class="col-xs-12 nopadding">
          <div class="form-group">
            <label for="InputEmail"class="upload-label full-width">Please upload your product file</label>
            <div class="col-xs-12 nopaddingleft">
              <form {{ action "upload" on="submit" }}>
                <input type="hidden" name="MAX_FILE_SIZE" value="1000" />
                {{bulk-upload-product id="uploadedFile" class="custom-file-input"}}
                <br />
                <button type="submit" class="btn btn-primary btn-size-small paddtb10 col-xs-12 col-sm-12 col-md-3 col-lg-3" disabled={{ or isUploading isEmptyShopName }}>Upload</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div>&nbsp;</div>

      {{#if uploadResults}}
      <div class="col-xs-12 col-sm-12 col-lg-12 in-block nopadding">
        <div class="col-xs-12 nopadding">
          <div class="form-group">
            <label for="InputEmail"class="upload-label full-width">Upload file {{ file_name }} result</label>
            <div class="col-xs-12 nopaddingleft">
              <ul>
              {{#each uploadResults as |uploadResult|}}
                <li style="list-style: none;">{{{ uploadResult.status_msg }}}</li>
                {{#each uploadResult.errors as |error|}}
                <li style="list-style: none;">
                  <ul>
                    <li>{{ error }}</li>
                  </ul>
                </li>
                {{/each}}
              {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
      {{/if}}

      </div>
      <div class="col-lg-8 col-md-8 col-xs-12 col-sm-12 in-block">
        <a target="_blank"  href="http://localhost:4200/assets/img/marketplace-guide.jpg">
        <img src="assets/img/marketplace-guide.jpg" width="100%;">
      </a>
      </div>
    </div>
  </div>
