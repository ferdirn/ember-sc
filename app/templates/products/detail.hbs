<div class="hidden-sm hidden-lg col-xs-12" id="hidden-spacer"></div>

<div class="container-fluid content-page">
  <div class="row breadcrumbs">
    <ol class="breadcrumb">
      <li><a href="#">Back</a>
      </li>
      <li class="active">{{model.name}}</li>
    </ol>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-6 col-md-6 side-padder">
      <div class="col-lg-12 col-md-12 col-sm-12 spacer20 dash-bar">
        <label for="exampleInputEmail1" class="in-block">Product Image</label>
      </div>
      <div class="col-lg-12 col-md-12 col-sm-12 bordering spacer20 bottom-spacer-container">
        <div class="col-lg-6 nopadding text-center col-middler bottom-spacer-container">
          <img src="{{model.image}}" width="100%">
        </div>
        <div class="col-lg-12 in-block">
          {{#each model.images as |img| }}
          <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <img src="{{img}}" width="100%">
          </div>
          {{/each}}

        </div>
      </div>
    </div>
    <div class="col-lg-6 col-sm-6 col-md-6 side-padder">
      <div class="col-lg-12 col-md-12 col-sm-12 spacer20 dash-bar">
        <label for="exampleInputEmail1" class="in-block">Items Detail</label>
      </div>
      <div class="col-lg-12 col-md-12 col-sm-12 bordering spacer20 bottom-spacer-container">
        <div class="col-lg-12 nopadding in-block">
          <h4 id="profil-data">{{model.name}}</h4>
          <p class="left-spacer-container detail-order">{{model.short_description}}</p>
          <h6 id="profil-data"> <span class="in-block min-120">SKU</span>: &nbsp;<span class="detail-order pink-font"><strong>{{model.product_sku}} </strong></span></h6>
          <h6 id="profil-data"> <span class="in-block min-120">Delivery Time</span>: &nbsp;<span class="detail-order pink-font"><strong> 1 - 3 working days </strong></span></h6>
          <h6 id="profil-data"> <span class="in-block min-120">Price</span>: &nbsp;<span class="detail-order pink-font"><strong> RP {{ format-money model.price }} </strong></span></h6>
          <h6 id="profil-data"> <span class="in-block min-120">Stock</span>: &nbsp;<span class="detail-order pink-font"><strong> {{ format-number model.qty }} </strong></span></h6>
          <h6 id="profil-data"> <span class="in-block min-120">Description</span>:</h6>
          <p class="left-spacer-container">{{model.description}}</p>
        </div>
      </div>
      {{# link-to "products.edit" model.id }}<div class="btn btn-primary btn-size-small pull-right nomargin">Edit</div>{{/link-to}}
    </div>
  </div>
</div>
