            <div class="col-sm-9">
              <textarea class="form-control maximum-width" rows="3"></textarea>
            </div>
          </div>
          <div class="form-group in-block full-width">
            <label for="inputbirthdate" class="col-sm-3 control-label texting-mid-form">Shop Address</label>
            <div class="col-sm-9">
              <textarea class="form-control maximum-width" rows="3"></textarea>
            </div>
          </div>
          <div class="form-group in-block full-width">
            <label for="phone" class="col-sm-3 control-label texting-mid-form">Return Address</label>
            <div class="col-sm-9">
              <textarea class="form-control maximum-width" rows="3"></textarea>
            </div>
          </div>
          <div class="form-group in-block full-width">
            <label for="inputidentitynumber" class="col-sm-3 control-label texting-mid-form">Bank Name</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="inputidentitynumber" placeholder="BCA">
            </div>
          </div>
          <div class="form-group in-block full-width">
            <label for="inputNPWP" class="col-sm-3 control-label texting-mid-form">Account Number</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="inputNPWP" placeholder="0929839918929xx">
