<div class="row">
  <div class="col-lg-12 nopadding">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Your Detail</div>
        <div class="panel-body nopadding">

          <form>
            <div class="col-lg-12 bottom-spacer">
              <div class="col-lg-2 col-xs-4 col-sm-3 nopadding propic in-block right-spacer">
                <img src="/img/thumb.png" width="100%">
              </div>

              <button type="submit" class="btn btn-hollow btn-size-small pull-left btn-change-pic">change picture</button>

            </div>

            <div class="form-group in-block full-width">
              <label for="name" class="col-sm-3 control-label texting-mid-form">Name</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" id="inputname" placeholder="Seller 1">
              </div>
            </div>
            <div class="form-group in-block full-width">
              <label for="inputemail" class="col-sm-3 control-label texting-mid-form">Email</label>
              <div class="col-sm-9">
                <input type="email" class="form-control" id="inputemail" placeholder="seller@moxy.asia">
              </div>
            </div>
            <div class="form-group in-block full-width">
              <label for="inputbirthdate" class="col-sm-3 control-label texting-mid-form">Birthdate</label>
              <div class="col-sm-9">
                <input type="date" class="form-control" id="inputbirthdate" placeholder="Seller 1">
              </div>
            </div>
            <div class="form-group in-block full-width">
              <label for="phone" class="col-sm-3 control-label texting-mid-form">Phone</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" id="phone" placeholder="0812938493xx">
              </div>
            </div>
            <div class="form-group in-block full-width">
              <label for="inputidentitynumber" class="col-sm-3 control-label texting-mid-form">ID Numbers</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" id="inputidentitynumber" placeholder="90288478278439xxx">
              </div>
            </div>
            <div class="form-group in-block full-width">
              <label for="inputNPWP" class="col-sm-3 control-label texting-mid-form">NPWP</label>
              <div class="col-sm-9">
                <input type="text" class="form-control" id="inputNPWP" placeholder="0929839918929xx">
              </div>
            </div>
            <div class="form-group in-block full-width">
              <label for="inputtype" class="col-sm-3 control-label texting-mid-form">Type</label>
              <div class="col-sm-9">
                <select class="form-control">
                  <option>Individual</option>
                  <option>Company</option>
                </select>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 nopadding">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Shop Detail</div>
        <div class="panel-body nopadding">
          <div class="form-group in-block full-width top-spacer">
